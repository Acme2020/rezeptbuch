<div class="container"> 
    <div class="row">
        <div class="col-4 col-5">
            <h1> Zutaten hinzufügen </h1>
                    <%= form_with model: @ingredients, class: "nifty_form" do |f| %>
                        <div class="form-group row">
                            <%= f.label :name, "Name", class:'control-label' %>
                            <%= f.text_field :name, required: true, class: "user-input form-control" %>
                            <%= f.label :amount, "Menge", class:'control-label' %>
                            <%= f.text_field :amount, required: true, class: "user-input form-control" %>
                            <%= f.label :unit, "Einheit", class:'control-label' %>
                            <%= f.select :unit, [["Gramm", "g"], ["Milliliter", "ml"], ["Teelöffel", "TL"], ["Esslöffel", "EL"]] %>
                            <%= f.hidden_field :recipe_id, :value => params[:recipe_id] %> 
                            <%= f.submit "Hinzufügen", class: "btn btn-primary" %>
                        </div>
                    <% end %>
        </div>
    </div>
</div>