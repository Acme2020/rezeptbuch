<div class="container"> 
    <div class="row">
        <div class="col">
        </div>
        <div class="col">
            <h1 class="text-center mt-5" > Zutaten hinzufügen  </h1>
                <%= form_with model: @ingredients, class: "nifty_form" do |f| %>
                        <div class="form-group row">
                            <%= f.label :name, "Name", class:'control-label' %>
                            <%= f.text_field :name, required: true, class: "user-input form-control mb-2" %>
                            <%= f.label :amount, "Menge", class:'control-label' %>
                            <%= f.text_field :amount, required: true, class: "user-input form-control mb-2" %>
                            <%= f.label :unit, "Einheit", class:'control-label' %>
                            <%= f.select :unit, [["Gramm", "g"], ["Milliliter", "ml"], ["Teelöffel", "TL"], ["Esslöffel", "EL"]] %>
                            <%= f.submit "Hinzufügen", class: "btn btn-primary mt-4" %>
                        </div>
               <% end %> 
        </div>
        <div class="col">
        </div>
    </div>
</div>