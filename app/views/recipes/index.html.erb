<div class="container">
  <div class="row align-items-start">
    <div class="col">
    </div>
    <% if %>
        <% @recipes.any? %>
            <div class="col">
                <h1 class="text-center mt-5">Rezepte</h1>
                <div class="col card-deck">
                    <% @recipes.each do |recipe| %>
                            <div class="card show_row align-items-center mt-4 mb-2">  
                            <%= image_tag "https://image.essen-und-trinken.de/11848908/t/RP/v8/w960/r1/-/bratkartoffeln-aus-pellkartoffeln-0b6b8b4c3273dfdf072b69bdfb0e7d8e-fjt2008110761-jpg--17250-.jpg", style: "max-width: 300px" %>
                                    <div class="card-body">
                                        <p class="card-text text-center">
                                        <%= link_to recipe.title, recipe_path(recipe) %></p>
                                        <% sum = 0 %>
                                        <% recipe.ratings.each do |el|%>
                                        <% sum = sum + el.rating %>
                                        <% end %>
                                        <%= "Durchschnittliche Bewertung: #{(sum/recipe.ratings.length).round} Sterne" %>
                                        <p><%= "Anzahl Bewertungen: #{recipe.ratings.length}" %></p>
                                    </div>
                            </div>              
                    <% end %>
                </div>
    <% else %>
                <h1>Sorry, keine Rezepte vorhanden :-(</h1>
            
    <% end %>
    </div>
    <div class="col">
    </div>
</div>