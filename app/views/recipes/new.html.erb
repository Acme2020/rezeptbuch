<div class="container"> 
    <div class="row">
        <div class="col-4 col-5">
            <h1> Neues Rezept erstellen </h1>
                    <%= form_with model: @recipe, class: "nifty_form" do |f| %>
                        <div class="form-group row">
                            <%= f.file_field :image %>
                            <%= f.label :title, "Name", class:'control-label' %>
                            <%= f.text_field :title, required: true, class: "user-input form-control" %>
                            <%= f.label :description, "Beschreibung", class:'control-label' %>
                            <%= f.text_field :description, required: true, class: "user-input form-control" %>
                            <%= f.submit "Erstellen", class: "btn btn-primary" %>
                        </div>
                    <% end %>
        </div>
    </div>
</div>