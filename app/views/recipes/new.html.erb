<div class="container"> 
    <div class="row">
        <div class="col">
        </div>
        <div class="col">
            <h1 class="text-center mt-5 mb-5" > Neues Rezept erstellen </h1>
                    <%= form_with model: @recipe, class: "nifty_form" do |f| %>
                        <div class="form-group row">
                            <%= f.label :image, "Bild", class:'control-label' %>
                            <%= f.file_field :image, class: "user-input form-control mb-2" %>
                            <%= f.label :title, "Name", class:'control-label' %>
                            <%= f.text_field :title, required: true, class: "user-input form-control mb-2" %>
                            <%= f.label :description, "Beschreibung", class:'control-label' %>
                            <%= f.text_field :description, required: true, class: "user-input form-control mb-2" %>
                            <%= f.label :author_name, "Autor", class:'control-label' %>
                            <%= f.text_field :author_name, required: true, class: "user-input form-control" %>
                            <%= f.submit "Erstellen", class: "btn btn-primary mt-4" %>
                        </div>
                    <% end %>
        </div>
            <div class="col">
        </div>
    </div>
</div>