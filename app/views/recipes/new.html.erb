<div class="container"> 
    <div class="row">
        <div class="col-4 col-5">
            <h1> Create a new folder </h1>
                    <%= form_with model: @folder, local: true, class: "nifty_form" do |f| %>
                        <div class="form-group row">
                            <%= f.label :name, "Name", class:'control-label' %>
                            <%= f.text_field :name, required: true, class: "user-input form-control" %>
                            <%= f.hidden_field :parent_id, :value => params[:folder_id] %>
                                <% if %>
                                    <% params[:index] %>
                                        <%= f.hidden_field :index_referrer, :value => true %>
                                <% end %>
                            <%= f.submit "Create Folder", class: "btn btn-primary" %>
                        </div>
                    <% end %>
        </div>
    </div>
</div>